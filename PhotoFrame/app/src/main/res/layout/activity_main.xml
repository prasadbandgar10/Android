<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B6B3DA"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/pic0"
        android:layout_width="426dp"
        android:layout_height="282dp"
        android:layout_marginTop="80dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="@+id/pic1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bheem"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/pic1"
        android:layout_width="426dp"
        android:layout_height="282dp"
        android:layout_weight="1"
        android:alpha="0"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/micky" />

    <ImageView
        android:id="@+id/pic2"
        android:layout_width="426dp"
        android:layout_height="282dp"
        android:layout_weight="1"
        android:alpha="0"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/picka" />

    <ImageView
        android:id="@+id/pic3"
        android:layout_width="426dp"
        android:layout_height="282dp"
        android:layout_weight="1"
        android:alpha="0"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/popoy" />

    <ImageView
        android:id="@+id/pic4"
        android:layout_width="384dp"
        android:layout_height="276dp"
        android:layout_weight="1"
        android:alpha="0"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sponge" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="348dp"
        android:layout_height="42dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pic0">

        <ImageButton
            android:id="@+id/prev"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:contentDescription="TODO"
            android:onClick="previous"
            app:srcCompat="@drawable/icon_previous" />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:onClick="nextimg"
            app:srcCompat="@drawable/ic_baseline_skip_next_24" />
    </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Bheem"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />
</androidx.constraintlayout.widget.ConstraintLayout>